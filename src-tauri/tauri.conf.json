{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "flowstatus",
  "version": "0.1.0",
  "identifier": "com.flowstatus.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "FlowStatus",
        "width": 360,
        "height": 600,
        "minWidth": 360,
        "minHeight": 600,
        "maxWidth": 360,
        "maxHeight": 600,
        "resizable": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
